{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": false,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "lib": ["es2015", "dom"],
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "allowJs": true,
    "jsx": "react"
  },
  "include": ["src"]
}
