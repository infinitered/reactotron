{
  "compilerOptions": {
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "dist/types",
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2015", "es2016", "es2017", "esnext"],
    "strict": false,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "outDir": "dist"
  },
  "include": ["src"]
}
