{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "lib": ["es2015", "es2016", "es2017", "esnext", "dom"],
    "strict": false,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": ["src"]
}
