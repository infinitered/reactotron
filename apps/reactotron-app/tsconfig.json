{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "allowJs": false,
    "jsx": "react",
    "noEmit": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "es2022",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "target": "es2022",
    "lib": ["es2022", "dom"],
    "types": ["jest"],
    "skipLibCheck": true,
    "baseUrl": ".",
  },
  "exclude": ["node_modules"],
  "include": ["src"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
    },
  },
}
