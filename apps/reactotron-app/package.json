{
  "name": "reactotron-app",
  "productName": "Reactotron",
  "version": "3.0.0-alpha.8",
  "description": "Reactotron desktop mode engage!",
  "author": {
    "name": "Infinite Red",
    "email": "hello@infinite.red",
    "url": "https://github.com/infinitered/reactotron"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/infinitered/reactotron/issues"
  },
  "repository": "https://github.com/infinitered/reactotron",
  "keywords": [
    "react",
    "react native"
  ],
  "homepage": "https://github.com/infinitered/reactotron#readme",
  "scripts": {
    "compile": "tsc",
    "start": "electron-webpack dev",
    "build": "electron-webpack",
    "release:artifacts": "node scripts/release.artifacts.js",
    "test": "jest",
    "test:watch": "jest --watch --notify",
    "lint": "eslint 'src/**/**.{ts,tsx}'",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "typecheck": "tsc --noEmit"
  },
  "electronWebpack": {
    "whiteListedModules": [
      "reactotron-core-ui",
      "react-router-dom"
    ],
    "renderer": {
      "webpackConfig": "webpack.config.js",
      "webpackDllConfig": "webpack.config.js"
    },
    "main": {
      "webpackConfig": "webpack.config.js"
    }
  },
  "dependencies": {
    "electron-log": "^4.4.8",
    "electron-store": "^8.1.0",
    "electron-updater": "^5.3.0",
    "electron-window-state": "^5.0.3",
    "immer": "^5.1.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hotkeys": "^2.0.0",
    "react-icons": "4.2.0",
    "react-modal": "3.16.1",
    "react-motion": "0.5.2",
    "react-router-dom": "^5.1.2",
    "react-tooltip": "4.2.21",
    "reactotron-core-server": "^3.0.3",
    "reactotron-core-ui": "2.0.1",
    "source-map-support": "^0.5.16",
    "styled-components": "^4.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.7.5",
    "@babel/preset-react": "^7.7.4",
    "@babel/preset-typescript": "^7.7.4",
    "@electron/notarize": "^1.2.3",
    "@storybook/addon-actions": "^5.2.8",
    "@storybook/addon-knobs": "^5.2.8",
    "@storybook/addon-links": "^5.2.8",
    "@storybook/addons": "^5.2.8",
    "@storybook/react": "^5.2.8",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^29.2.5",
    "@types/react": "^16.9.16",
    "@types/react-dom": "^16.9.4",
    "@types/react-router-dom": "^5.1.3",
    "@types/styled-components": "^4.4.1",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "babel-loader": "^8.0.6",
    "electron": "22.0.1",
    "electron-builder": "^23.6.0",
    "electron-webpack": "2.8.2",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "prettier": "^1.19.1",
    "react-test-renderer": "18.2.0",
    "ts-jest": "^29.0.4",
    "typescript": "^4.6.4",
    "webpack": "^4.41.3"
  },
  "build": {
    "productName": "Reactotron",
    "appId": "com.reactotron.app",
    "afterSign": "scripts/notarize.js",
    "files": [
      "src/dist/",
      "src/app.html",
      "src/main.prod.js",
      "src/main.prod.js.map",
      "package.json"
    ],
    "dmg": {
      "sign": false,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "mac": {
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "win": {
      "icon": "./icon.png",
      "target": [
        "nsis",
        "msi"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "snap",
        "AppImage"
      ],
      "category": "Development"
    },
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "publish": {
      "provider": "github",
      "releaseType": "release",
      "owner": "infinitered",
      "repo": "reactotron",
      "private": false,
      "vPrefixedTagName": false
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/*.test.ts",
      "**/*.test.tsx"
    ]
  },
  "eslintConfig": {
    "root": false,
    "extends": [
      "plugin:react/recommended"
    ],
    "plugins": [
      "react",
      "react-hooks"
    ],
    "settings": {
      "react": {
        "version": "detect"
      },
      "import/core-modules": [
        "electron"
      ]
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "react/prop-types": 0,
      "no-unused-vars": 0,
      "no-undef": 0,
      "space-before-function-paren": 0,
      "@typescript-eslint/indent": 0,
      "@typescript-eslint/explicit-member-accessibility": 0,
      "@typescript-eslint/explicit-function-return-type": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/no-object-literal-type-assertion": 0,
      "@typescript-eslint/no-empty-interface": 0,
      "@typescript-eslint/no-var-requires": 0,
      "@typescript-eslint/member-delimiter-style": 0
    }
  }
}
