{
  "name": "reactotron-react-native",
  "version": "2.1.0",
  "description": "A development tool to explore, inspect, and diagnose your React Native apps.",
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "reactotron-react-native.d.ts"
  ],
  "main": "dist/index.js",
  "types": "./reactotron-react-native.d.ts",
  "scripts": {
    "build": "rollup -c",
    "format": "prettier --write {**,.}/*.js && standard --fix",
    "lint": "standard",
    "build:watch": "node watch.js",
    "ci:test": "yarn test",
    "ci:publish": "yarn semantic-release",
    "semantic-release": "semantic-release"
  },
  "author": "Infinite Red",
  "bugs": {
    "url": "https://github.com/infinitered/reactotron/issues"
  },
  "devDependencies": {
    "ava": "^0.20.0",
    "babel-core": "^6.25.0",
    "babel-eslint": "^8.2.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2015-rollup": "^3.0.0",
    "babel-preset-react-native": "^2.1.0",
    "babel-preset-stage-1": "^6.24.1",
    "execa": "^0.7.0",
    "mockery": "^2.0.0",
    "node-watch": "^0.5.5",
    "nyc": "^11.0.3",
    "prettier": "^1.10.2",
    "react": "^15.6.1",
    "react-native": "^0.46.0",
    "react-native-mock": "^0.3.1",
    "rollup": "^0.43.0",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-filesize": "^1.5.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^3.0.0",
    "standard": "^10.0.3"
  },
  "license": "MIT",
  "homepage": "https://github.com/infinitered/reactotron-react-native",
  "ava": {
    "require": [
      "babel-core/register",
      "./test/_setup"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "__DEV__",
      "fetch"
    ],
    "ignore": [
      "/src/thirdparty/rn-host-detect.js"
    ]
  },
  "repository": "https://github.com/infinitered/reactotron-react-native",
  "peerDependencies": {
    "react": "^15.2.1 || 16.0.0-alpha.6 || 16.0.0-alpha.12 || 16.0.0-beta.5 || ^16.0.0",
    "react-native": ">=0.40.0"
  },
  "dependencies": {
    "mitt": "^1.1.2",
    "prop-types": "^15.5.10",
    "reactotron-core-client": "^2.1.0"
  }
}
