{
  "name": "reactotron-core-client",
  "version": "2.2.1",
  "description": "Grants Reactotron clients the ability to talk to a Reactotron server.",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "main": "dist/reactotron-core-client.js",
  "typings": "dist/types/reactotron-core-client.d.ts",
  "scripts": {
    "build": "npm-run-all clean compile rollup",
    "clean": "trash dist compiled",
    "format": "prettier --write {**,.}/*.ts && tslint -p . --fix",
    "compile": "NODE_ENV=production tsc",
    "lint": "tslint -p .",
    "rollup": "NODE_ENV=production rollup -c",
    "test": "jest",
    "ci:test": "yarn test",
    "ci:publish": "yarn semantic-release",
    "semantic-release": "semantic-release"
  },
  "author": "Infinite Red",
  "bugs": {
    "url": "https://github.com/infinitered/reactotron-core-client/issues"
  },
  "devDependencies": {
    "@semantic-release/git": "^7.0.5",
    "@types/jest": "^24.0.0",
    "@types/node": "^10.12.12",
    "@types/ws": "^6.0.1",
    "execa": "^1.0.0",
    "get-port": "^4.0.0",
    "jest": "^23.6.0",
    "npm-run-all": "^4.1.1",
    "prettier": "^1.7.4",
    "ramda": "^0.26.1",
    "rollup": "^0.67.4",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-filesize": "^5.0.1",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-uglify": "^6.0.0",
    "semantic-release": "^15.12.2",
    "trash-cli": "^1.4.0",
    "ts-jest": "^23.10.5",
    "tslib": "^1.8.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.6.0",
    "typescript": "^3.2.1",
    "ws": "^6.1.2"
  },
  "homepage": "https://github.com/infinitered/reactotron",
  "license": "MIT",
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "transform": {
      ".(ts|tsx)": "./node_modules/ts-jest/preprocessor.js"
    }
  },
  "repository": "infinitered/reactotron-core-client"
}
